<div class="container" style="margin-top: 4rem">
  <h3 id="user-blogs">User blogs</h3>
  <div class="row">
    <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <%- editIcon(blog.owner, user, blog._id) %>
        </div>
        <div class="card-content center-align">
          <h5 id="blog-title"><%= blog.title %></h5>
          <p><%= stripTags(truncate(blog.body, 150)) %></p>
          <br />
          <div class="chip">
            <img src="<%= blog.owner.image %> " alt="" />
            <a href="/blogs/user/<%= blog.owner._id %> "
              ><%= blog.owner.displayName %>
            </a>
          </div>
        </div>
        <div class="card-action center-align">
          <a href="/blogs/<%= blog._id %> " id="read-more-btn" class="btn grey"
            >Read More</a
          >
        </div>
      </div>
    </div>
    <% }) %> <% } else{ %>
    <p
      style="
        padding-top: 2rem;
        display: inline-block;
        font-family: Poppins;
        font-weight: 600;
      "
    >
      User has no public blogs.
      <a
        href="/dashboard"
        class="btn black"
        style="font-family: Poppins; font-weight: 600; margin-left: 2rem"
      >
        Home
      </a>
    </p>
    <% } %>
  </div>
</div>
